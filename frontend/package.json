{
  "name": "supaplex-levels-editor",
  "version": "0.19.0-dev",
  "private": true,
  "description": "Supaplex Levels Editor in browser",
  "keywords": [
    "supaplex",
    "megaplex"
  ],
  "author": {
    "name": "Vovan-VE",
    "email": "vovan-ve@yandex.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vovan-VE/supaplex-levels-editor.git"
  },
  "bugs": {
    "url": "https://github.com/Vovan-VE/supaplex-levels-editor/issues"
  },
  "scripts": {
    "analyze": "npm exec --yes -- source-map-explorer@^2 'build/static/js/*.js'",
    "i18n:ci": "npm exec --yes -- i18next-parser@^8 -s --fail-on-update",
    "i18n:extract": "npm exec --yes -- i18next-parser@^8",
    "prepare": "npm ls husky > /dev/null && cd .. && husky install || exit 0",
    "start": "react-scripts start",
    "start:wails": "cross-env REACT_APP_WAILS=1 PORT=3017 BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "build:wails": "cross-env REACT_APP_WAILS=1 BUILD_PATH=./build-wails react-scripts build",
    "test": "tsc && npm run test:unit && npm run test:dependencies && npm run i18n:ci",
    "test:dependencies": "npm exec --yes -- madge@^5 -c src/index.tsx --warning --ts-config tsconfig.json",
    "test:unit": "cross-env CI=true react-scripts test --env=./jest-env-jsdom-ext.js",
    "test:watch": "react-scripts test --env=./jest-env-jsdom-ext.js",
    "typescript": "tsc"
  },
  "dependencies": {
    "@cubux/effector-persistent": "^0.7.0",
    "@cubux/readonly-array": "^2.0.0",
    "@cubux/readonly-map": "^2.0.1",
    "@cubux/storage-driver": "^0.5.0",
    "@cubux/types": "^1.0.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@popperjs/core": "^2.11.8",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.1.2",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.19.3",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "effector": "^23.1.0",
    "effector-react": "^23.1.0",
    "fast-deep-equal": "^3.1.3",
    "file-saver": "^2.0.5",
    "i18next": "^23.7.11",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.5.0",
    "react-popper": "^2.3.0",
    "react-range": "^1.8.14",
    "react-scripts": "^5.0.1",
    "react-select": "^5.8.0",
    "sass": "^1.69.5",
    "typescript": "~4.9"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1"
  },
  "engines": {
    "node": ">=18"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*\\.dev/.*"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "prettier": {}
}
