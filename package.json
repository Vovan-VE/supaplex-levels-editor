{
  "name": "sp-ed",
  "version": "0.1.0",
  "private": true,
  "description": "Supaplex levels editor in browser.",
  "keywords": [
    "supaplex",
    "megaplex"
  ],
  "author": {
    "name": "Vovan-VE",
    "email": "vovan-ve@yandex.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vovan-VE/sp-ed.git"
  },
  "bugs": {
    "url": "https://github.com/Vovan-VE/sp-ed/issues"
  },
  "scripts": {
    "prepare": "npm ls husky > /dev/null && husky install || exit 0",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "tsc && cross-env CI=true react-scripts test --env=./jest-env-jsdom-ext.js",
    "test:watch": "react-scripts test --env=./jest-env-jsdom-ext.js",
    "typescript": "tsc"
  },
  "dependencies": {
    "@cubux/effector-persistent": "^0.2.0",
    "@cubux/readonly-array": "^1.0.0",
    "@cubux/readonly-map": "^1.0.0",
    "@cubux/storage-driver": "^0.3.1",
    "@cubux/types": "^1.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^27.5.2",
    "@types/node": "^14.18.23",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "classnames": "^2.3.1",
    "effector": "^22.3.0",
    "effector-react": "^22.1.6",
    "file-saver": "^2.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.54.2",
    "typescript": "^4.7.4",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*\\.dev/.*"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  }
}
